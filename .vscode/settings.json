{
	"css.validate": false,
	"scss.validate": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"html"
	],
	"files.associations": {
		"*.svelte": "html",
	},
	/* Markdown*/
	"markdownlint.config": {
		"no-trailing-spaces": true, //   MD009 default // Trailling spaces
		"no-multiple-blanks": { //       MD012         // Multiple consective blank lines
			"maximum": 2
		},
		"line-length": false, //         MD013         // Line lingth
		"commands-show-output": true, // MD014 default // Dollar signs used before commands without showing output
		"blanks-around-headers": { //    MD022         // Headers should be surrounded by blank lines
			"lines_above": 2,
			"lines_below": 1
		},
		"single-h1": true, //            MD025 default // Multiple top level headers in the same document
		"fenced-code-language": true, // MD040 default // Fenced code blocks should have a language specified
		"first-header-h1": true, //      MD041 default // FIrst line in file should be a top level header
	},
}