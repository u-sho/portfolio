{
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"html"
	],
	"files.associations": {
		"*.svelte": "html",
	},
	/* Markdown*/
	"markdownlint.config": {
		"no-multiple-blanks": {       // MD012         // Multiple consective blank lines
			"maximum": 2
		},
		"line-length": false,         // MD013         // Line lingth
		"commands-show-output": true, // MD014 default // Dollar signs used before commands without showing output
		"blanks-around-headers": {    // MD022         // Headers should be surrounded by blank lines
			"lines_above": 2,
			"lines_below": 1
		},
		"single-h1": true,            // MD025 default // Multiple top level headers in the same document
	},
}